<% include ./partials/header%>
<div style="text-align:"justify" "class="ui main text container segment" style="margin-top:7.0em">
  <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached segment">
      <div class="item">

        <img class="ui centered rounded image"src="<%= blog.image%>" alt="">
        <div class="content">
            <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
          <p style="text-align:justify"><%= blog.body%></p>
        </div>
        <a class="ui floated basic orange button" href="/blogs/<%= blog._id %>/edit">Edit</a>
        <form style = "display:inline" class="" action="/blogs/<%=blog._id%>?_method=DELETE" method="post">
          <button class="ui red basic button">Delete</button>

        </form>
      </div>
    </div>
  </div>
<% include ./partials/footer%>
